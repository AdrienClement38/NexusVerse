{% extends 'base.html.twig' %}

{% block title %}League{% endblock %}

{% block body %}
    <h1>League</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ league.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ league.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ league.startDate ? league.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ league.endDate ? league.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_league_index') }}">back to list</a>

    <a href="{{ path('app_league_edit', {'id': league.id}) }}">edit</a>

