{% extends 'base.html.twig' %}

{% block title %}League index{% endblock %}
{% block pageTitle %}League index{% endblock %}

{% block bodyContent %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for league in leagues %}
            <tr>
                <td>{{ league.id }}</td>
                <td>{{ league.name }}</td>
                <td>{{ league.startDate ? league.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ league.endDate ? league.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_league_show', {'id': league.id}) }}">show</a>
                    <a href="{{ path('app_league_edit', {'id': league.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_league_new') }}">Create new</a>
{% endblock %}