{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}
{% block pageTitle %}Tournament{% endblock %}

{% block bodyContent %}
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ tournament.startDate ? tournament.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ tournament.endDate ? tournament.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_tournament_index') }}">back to list</a>

    <a href="{{ path('app_admin_tournament_edit', {'id': tournament.id}) }}">edit</a>

    {{ include('admin_tournament/_delete_form.html.twig') }}
{% endblock %}
